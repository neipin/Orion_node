<% if(data.project_list){%>
<%data.project_list.forEach(function(project){%>
	<div class="servicelistcon">
		<a href="JavaScript:void(0);" class="list_delate">删除</a>
 		<div class="form-group form-inline">
 			<label for=""><span></span>项目名称：</label>
 			<input type="text" class="form-control" name="project_list.project_name" placeholder='请输入项目名称' autocomplete="off" value="<%=project.project_name%>"/>              
        </div>
        <div class="form-group form-inline">
        	<label for=""><span>*</span>担任职务：</label>
          	<input class="form-control" type="text" name="project_list.position" placeholder='请输入担任职务' autocomplete="off" value="<%=project.position%>"/>              
          	<span id="" class='help-block'></span>
 		</div>			 			
 		<div class="form-group form-inline">
 			<label for=""><span></span>项目时间：</label>
          	<div class="salary_divbox">
				<div class="salary_div"><input type="text"  class="form-control form_date" name="project_list.start_date" autocomplete="off"  value="<%=project.start_date%>" placeholder="开始时间"/></div>
              	<div class="salary_text" <%if(project.end_date==""){%>style="display:none;"<%}%>>至</div>
              	<div class="salary_div" <%if(project.end_date==""){%>style="display:none;"<%}%>><input type="text" autocomplete="off" name="project_list.end_date" class="form-control form_date" value="<%=project.end_date%>" placeholder="截止时间"/></div>
              	<div class="time_now"><input type="checkbox" value="" <%if(project.end_date==""){%> checked="checked"<%}%>/>至今</div>
			</div>		
 		</div>
 		<div class="form-group form-inline form-group100">
 			<label for=""><span></span>项目描述：</label>
 			<textarea class="form-control"  name="project_list.description" rows="8" cols="5" placeholder='请输入项目描述' value="<%=project.description%>"><%=project.description%></textarea>
		</div>
		<div class="form-group form-inline form-group100">
			<label for=""><span></span>项目职责：</label>
			<textarea class="form-control" name="project_list.responsiblity" rows="8" cols="5" placeholder='请输入项目职责' value="<%=project.responsiblity%>"><%=project.responsiblity%></textarea>
		</div>
 	</div>
<%})%>
<%}%>