	                	<div id="del_contact"></div>
	                	<div class="data-con data-contactcon" style="padding-top: 0; margin-bottom: 10px;">
		                	<div class="ziliao-upload" style=" margin: 10px 0 10px 10px; width: 120px; display: inline-block;"><span class="glyphicon glyphicon-upload"></span>上传合同文件<input type="file" name="temp_file" id="temp_file" value="" class='upfile' onchange="javascript:uploadcontact();"/></div>
		    				{{ if attach_files!=''}}
							{{each attach_files as attach_files}}
		    				<div class="contract-list">
		    					<i class="glyphicon glyphicon-folder-open"></i>
		    					<a href="{{attach_files.attach_id}}" id="{{attach_files.attach_id}}" no-nave="true"  title="">{{attach_files.attach_original_name}}</a>
		    					<em class="glyphicon glyphicon-remove"></em>
		    					<input type="hidden" name="attach_file_list.attach_id" value="{{attach_files.attach_id}}" />
			    				<input type="hidden" name="attach_file_list.original_file_name" value="{{attach_files.attach_original_name}}" />
			    				<input type="hidden" name="attach_file_list.temp_file_name" value="{{attach_files.attach_file_name}}" />
		    				</div>
		    				{{/each}}
							{{/if}}
		                </div>
	                	<div class="form-group form-inline">
	                		<label for=""><span>*</span>合同编号：</label>
	                		<input class="form-control " type="text" placeholder="自动生成"  np_require="true" name="contract_no" value="{{contract_no}}" readonly="readonly"/>
	                		<span class="help-block"></span>
	                	</div>
	                	
	                	<div class="form-group form-inline">
	                		<label for=""><span>*</span>保证期：</label>
                			<select name="" class="form-control" style="margin-right: 10px;{{if !baozheng_qx||baozheng_qx==''}}color: #a9a9a9;{{/if}}">
	                			<option value="" disabled {{if !baozheng_qx||baozheng_qx==''}}selected{{/if}}>请选择保证期</option>
	                			<option value="1" {{if baozheng_qx=='1'}}selected{{/if}}>1</option>
	                			<option value="2" {{if baozheng_qx=='2'}}selected{{/if}}>2</option>
	                			<option value="3" {{if baozheng_qx=='3'}}selected{{/if}}>3</option>
	                			<option value="4" {{if baozheng_qx=='4'}}selected{{/if}}>4</option>
	                			<option value="5" {{if baozheng_qx=='5'}}selected{{/if}}>5</option>
	                			<option value="6" {{if baozheng_qx=='6'}}selected{{/if}}>6</option>
	                		</select>个月
	                		<input class="np_form_check" type="hidden" placeholder="请选择保证期" np_require="true" name="baozq" value="{{baozheng_qx}}"/>
	                		<span class="help-block"></span>
	                	</div>
	                	<div class="form-group form-inline">
	                		<label for=""><span>*</span>开始时间：</label>
	                		<input class="form-control form_date np_form_check" type="text" placeholder="请输入开始时间" np_require="true" name ="start_date" value="{{start_date}}"  data-date-format="yyyy-mm-dd"/>
	                		<span class="help-block"></span>
