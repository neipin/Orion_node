<script>
$(document).ready(function(){
	$(".work_desk").find("p").click(function(){
		var $this = $(this).parent();
		var v = $this.attr("v");
		if(v==0){
			$this.addClass("borderblue5").addClass("bgtoggle");
			$this.find("ul").slideDown(400);
			$this.attr("v","1");
			$this.siblings("div").find("ul").slideUp(350,function(){
				$(this).parent("div").removeClass("borderblue5").removeClass("bgtoggle");				
			});
			$this.siblings("div").attr("v","0");			
		}
		else{			
			$this.find("ul").slideUp(400,function(){  
				$(this).parent("div").removeClass("borderblue5");				
			});
			$this.attr("v","0");
		}		
	})
//	文本换行 需要换行的class加上textTohtml
	$('.textTohtml').each(function(){
		$(this).html($(this).html().replace(/\r\n/g,"<br>").replace(/\n/g,"<br>"));				
	})

});


        
</script>
